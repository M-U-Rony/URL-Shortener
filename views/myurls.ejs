<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>My URLs</title>

  <!-- Tailwind CSS -->
  <link rel="stylesheet" href="/output.css" />

  <!-- Google Font -->
  <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600&display=swap" rel="stylesheet" />
  
  <style>
    body {
      font-family: 'Poppins', sans-serif;
    }
  </style>
</head>
<body class="min-h-screen text-black p-6">

  <div class="max-w-5xl mx-auto p-6 rounded-xl shadow-xl border border-white/20">
    <h1 class="text-3xl font-semibold text-center mb-6">My URLs</h1>

    <div class="overflow-x-auto">
      <table class="w-full table-auto text-sm text-left border-collapse">
        <thead>
          <tr class="bg-opacity-10 border-b border-white/20">
            <th class="px-4 py-3 font-semibold">Original URL</th>
            <th class="px-4 py-3 font-semibold">Short URL</th>
            <th class="px-4 py-3 font-semibold">Total Clicks</th>
          </tr>
        </thead>
        <tbody>
          <% urls.forEach(url => { %>
            <tr class="hover:bg-white/10 transition duration-200 border-b border-white/10">
              <td class="px-4 py-3 break-words max-w-[300px]"><%= url.originalUrl %></td>
              <td class="px-4 py-3 text-blue-500 underline">
                <a href="<%= url.shortUrl %>" target="_blank"><%= url.shortUrl %></a>
              </td>
              <td class="px-4 py-3"><%= url.clicks %></td>
            </tr>
          <% }) %>
        </tbody>
      </table>
    </div>
  </div>

</body>
</html>
